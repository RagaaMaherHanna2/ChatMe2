<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_profile"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/message_profile"
        android:layout_toRightOf="@+id/message_profile"
        android:background="@drawable/message_text_background"
        android:padding="15dp"
        android:text="@string/message_text"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>